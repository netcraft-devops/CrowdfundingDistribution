<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_DISTRIBUTION_MIGRATION</name>
	<author>Todor Iliev</author>
    <copyright>Copyright (C) 2016 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.0</version>
	<creationDate>31 March, 2016</creationDate>
	<description>This plugin manages database migration between distribution releases.</description>
	<files>
		<filename plugin="distributionmigration">distributionmigration.php</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="migrate_schemas" type="radio" class="btn-group"
					   label="PLG_SYSTEM_DISTRIBUTION_MIGRATION_MIGRATE_SCHEMAS"
						description="PLG_SYSTEM_DISTRIBUTION_MIGRATION_MIGRATE_SCHEMAS_DESC"
						default="0"
						size="40"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>
